/**index.wxss**/

.film-tab {
  width: 100%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  position: fixed;
  border-bottom: 1rpx solid #ccc;
  background-color: #fafafa;
  top: 0;
}

.city {
  font-size: 30rpx;
  color: #666;
  position: absolute;
  left: 50rpx;
}

.find{
  font-size: 30rpx;
  color: #666;
  position: absolute;
  right: 50rpx;
  margin-top: 10rpx;
}

.find image{
  width: 50rpx;
  height: 50rpx;
}

.interval {
  margin-left: 60rpx;
  margin-right: 60rpx;
}

.active {
  font-weight: bold;
}

.films {
  width: 100%;
  position: fixed;
  bottom: 0rpx;
}

.film {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 100rpx;
}

.showing-film {
  overflow: hidden;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.film-cover {
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: 10rpx;
  height: 600rpx;
}

.film-img {
  border-radius: 15rpx;
  width: 350rpx;
  height: 508rpx;
}

.film-rating {
  margin-top: -48rpx;
  box-sizing: border-box;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50rpx;
  padding-right: 20rpx;
  font-size: 12px;
  text-align: right;
  line-height: 50rpx;
  background-color: rgba(0, 0, 0, 0.65);
  color: #fff;
}

.file-intro {
  padding-top: 10rpx;
}

.film-title {
  height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  width: 300rpx;
  margin: 5rpx 25rpx;
  font-weight: bold;
  overflow: hidden;
}

.bottom{
  background-color: #eee;
  height: 150rpx;
  text-align: center;
  font-size: 30rpx;
  padding-top: 20rpx;
  color: #ccc;
}
