/* pages/collection/collection.wxss */


.film {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
  flex-direction: row;
}

.sfilm {
  overflow: hidden;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-right: 10rpx;
}

.film-cover {
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: 10rpx;
  height: 600rpx;
}

.film-img {
  border-radius: 15rpx;
  width: 350rpx;
  height: 508rpx;
}

.film-rating {
  margin-top: -48rpx;
  box-sizing: border-box;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50rpx;
  padding-right: 20rpx;
  font-size: 12px;
  text-align: right;
  line-height: 50rpx;
  background-color: rgba(0, 0, 0, 0.65);
  color: #fff;
}

.file-intro {
  padding-top: 10rpx;
}

.film-title {
  height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  width: 300rpx;
  margin: 5rpx 25rpx;
  font-weight: bold;
  overflow: hidden;
}

.nothing{
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin-top: 50%;
}

.nothing image{
  width: 200rpx;
  height: 200rpx;
}

.nothing text{
  color: #666;
  font-weight: bold;
}