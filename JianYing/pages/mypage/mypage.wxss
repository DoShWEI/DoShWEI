/* pages/mypage/mypage.wxss */

.container {
  display: flex;
  flex-direction: column;
  background-color: #eee;
}

.userinfo {
  height: 300rpx;
  background-color: #666;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border: 5rpx solid #fafafa;
  border-radius: 50%;
  margin-top: 50rpx;
}

.userinfo-nickname {
  margin-bottom: 50rpx;
  color: #fafafa;
  font-size: 38rpx;
  /* letter-spacing: 10rpx; */
  
}

.collection {
  margin-top: 20rpx;
  border-bottom: 1rpx solid #ccc;
  border-top: 1rpx solid #ccc;
  height: 200rpx;
  background-color: white;
  display: flex;
  align-items: center;
}

.collection image {
  width: 100rpx;
  height: 80rpx;
  padding: 40rpx;
}

.collection text {
  font-size: 34rpx;
}
